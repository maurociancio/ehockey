<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping default-access="field">
    <class name="ar.noxit.ehockey.model.Planilla" entity-name="Planilla" table="planillas">
        <id name="id" column="id" >
            <generator class="increment"/>
        </id>

        <many-to-one name="local" entity-name="Equipo" column="local_id" unique="true"/>
        <many-to-one name="visitante" entity-name="Equipo" column="visitante_id" unique="true"/>

        <set name="jugadoresL" table="jugadores_locales_en_planilla">
            <key column="planilla_id"/>
            <many-to-many entity-name="Jugador" column="jugador_id"/>
        </set>
        <set name="jugadoresV" table="jugadores_visitantes_en_planilla">
            <key column="planilla_id"/>
            <many-to-many entity-name="Jugador" column="jugador_id"/>
        </set>

        <property name="dTL"/>
        <property name="capitanL"/>
        <property name="pFisicoL"/>
        <property name="medicoL"/>
        <property name="juezDeMesaL"/>
        <property name="arbitroL"/>
        <property name="golesL"/>

        <property name="dTV"/>
        <property name="capitanV"/>
        <property name="pFisicoV"/>
        <property name="medicoV"/>
        <property name="juezDeMesaV"/>
        <property name="arbitroV"/>
        <property name="golesV"/>

        <property name="observaciones"/>
    </class>
</hibernate-mapping>