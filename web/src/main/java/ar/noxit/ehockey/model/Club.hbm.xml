<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping default-access="field">
    <class name="ar.noxit.ehockey.model.Club" entity-name="Club" table="clubes">
        <id name="id" column="id" >
            <generator class="increment"/>
        </id>
        <property name="nombreCompleto" not-null="true"/>
        <property name="nombre"/>
        <property name="direccion"/>
        <property name="codigoPostal"/>
        <property name="provincia"/>
        <property name="email"/>
        <property name="telefono"/>
        <property name="web"/>
        <property name="observaciones"/>
        <property name="activo" not-null="true"/>
        <set name="jugadores" table="jugadores_por_club" access="field">
            <key column="club_id"/>
            <many-to-many column="jugador_id" unique="true" class="Jugador"/>
        </set>
        <set name="equipos" table="equipos_por_club">
            <key column="club_id"/>
            <many-to-many column="equipo_id" unique="true" class="Equipo"/>
        </set>
    </class>
</hibernate-mapping>