<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="wicketApplication" class="ar.noxit.ehockey.web.app.EHockeyApplication">
		<constructor-arg value="development" />
	</bean>

	<bean id="menuItemProvider" class="ar.noxit.ehockey.configuration.MenuItemProvider">
		<property name="items">
			<map>
				<entry>
					<key>
						<value>Home</value>
					</key>
					<value>ar.noxit.ehockey.web.pages.HomePage</value>
				</entry>
				<entry>
					<key>
						<value>Lista de Buena Fe</value>
					</key>
					<value>ar.noxit.ehockey.web.pages.buenafe.ListaBuenaFePage
					</value>
				</entry>
				<entry>
					<key>
						<value>Partidos</value>
					</key>
					<value>ar.noxit.ehockey.web.pages.partido.PartidoPage</value>
				</entry>
				<entry>
					<key>
						<value>Torneos</value>
					</key>
					<value>ar.noxit.ehockey.web.pages.torneo.TorneoPage</value>
				</entry>
				<entry>
					<key>
						<value>Jugadores</value>
					</key>
					<value>ar.noxit.ehockey.web.pages.jugadores.JugadorPage</value>
				</entry>
				<entry>
					<key>
						<value>Tabla Posiciones</value>
					</key>
					<value>ar.noxit.ehockey.web.pages.tablaposiciones.TablaPosicionesPage </value>
				</entry>
				<entry>
					<key>
						<value>Usuarios</value>
					</key>
					<value>ar.noxit.ehockey.web.pages.usuarios.ListaUsuariosPage </value>
				</entry>
                <entry>
                    <key>
                        <value>Fecha y Hora</value>
                    </key>
                    <value>ar.noxit.ehockey.web.pages.fechahora.FechaHoraPage</value>
                </entry>
			</map>
		</property>
	</bean>
	
	<bean id="usuarioDTOProvider" class="ar.noxit.ehockey.configuration.UsuarioDTOProvider">
		<property name="usuarioTypes">
			<map>
				<entry>
					<key>
						<value>Administrador</value>
					</key>
					<value>ar.noxit.ehockey.model.Administrador</value>
				</entry>
				<entry>
					<key>
						<value>Representante</value>
					</key>
					<value>ar.noxit.ehockey.model.Representante</value>
				</entry>
			</map>
		</property>
	</bean>
</beans>
